
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "command": "gcc",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/output/${fileBasenameNoExtension}.out",
                "-g",
                "-Wall",
                "-static-libgcc",
                "-std=c11",
                ],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
            // "problemMatcher":"$gcc"
        }
    ]
}

